<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1>Test Page</h1>

      <div class="card">
        <div class="card-header">Debug Information</div>
        <div class="card-body">
          <h5>User Status:</h5>
          <% if (typeof user !== 'undefined' && user) { %>
          <p><strong>Logged in as:</strong> <%= user.email %></p>
          <p><strong>Is Admin:</strong> <%= isAdmin ? 'Yes' : 'No' %></p>
          <p><strong>User Name:</strong> <%= user.name || 'N/A' %></p>
          <% } else { %>
          <p><strong>Status:</strong> Not logged in</p>
          <p><strong>User variable:</strong> <%= typeof user %></p>
          <p><strong>Is Admin variable:</strong> <%= typeof isAdmin %></p>
          <% } %>

          <hr />

          <h5>Available Variables:</h5>
          <pre>
<%= JSON.stringify({ 
                    hasUser: typeof user !== 'undefined', 
                    userType: typeof user,
                    hasIsAdmin: typeof isAdmin !== 'undefined',
                    isAdminType: typeof isAdmin,
                    title: typeof title !== 'undefined' ? title : 'undefined',
                    page: typeof page !== 'undefined' ? page : 'undefined'
                }, null, 2) %></pre
          >
        </div>
      </div>

      <div class="mt-3">
        <a href="/" class="btn btn-primary">Back to Home</a>
        <a href="/login" class="btn btn-secondary">Login</a>
      </div>
    </div>
  </body>
</html>
