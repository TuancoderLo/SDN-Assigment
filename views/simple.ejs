<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Test</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header bg-primary text-white">
              <h3><i class="fas fa-vial"></i> Perfume Store - Simple Test</h3>
            </div>
            <div class="card-body">
              <h4>System Status:</h4>

              <!-- User Status -->
              <div class="alert alert-info">
                <h5><i class="fas fa-user"></i> Authentication Status:</h5>
                <% if (typeof user !== 'undefined' && user) { %>
                <p><strong>‚úÖ Logged in as:</strong> <%= user.email %></p>
                <p><strong>üë§ Name:</strong> <%= user.name || 'N/A' %></p>
                <p>
                  <strong>üëë Admin:</strong> <%= (typeof isAdmin !== 'undefined'
                  && isAdmin) ? 'Yes' : 'No' %>
                </p>
                <% } else { %>
                <p><strong>‚ùå Status:</strong> Not logged in</p>
                <% } %>
              </div>

              <!-- Debug Info -->
              <div class="alert alert-secondary">
                <h5><i class="fas fa-bug"></i> Debug Information:</h5>
                <ul class="mb-0">
                  <li><strong>user variable:</strong> <%= typeof user %></li>
                  <li>
                    <strong>isAdmin variable:</strong> <%= typeof isAdmin %>
                  </li>
                  <li><strong>title variable:</strong> <%= typeof title %></li>
                  <li><strong>page variable:</strong> <%= typeof page %></li>
                </ul>
              </div>

              <!-- Navigation -->
              <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a href="/" class="btn btn-primary">
                  <i class="fas fa-home"></i> Home
                </a>
                <a href="/test" class="btn btn-secondary">
                  <i class="fas fa-flask"></i> Test Page
                </a>
                <% if (typeof user !== 'undefined' && user) { %>
                <button onclick="logout()" class="btn btn-danger">
                  <i class="fas fa-sign-out-alt"></i> Logout
                </button>
                <% } else { %>
                <a href="/login" class="btn btn-success">
                  <i class="fas fa-sign-in-alt"></i> Login
                </a>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Logout Script -->
    <script>
      async function logout() {
        try {
          const response = await fetch("/api/auth/logout", {
            method: "POST",
            credentials: "include",
          });

          if (response.ok) {
            window.location.href = "/login";
          } else {
            alert("Logout failed");
          }
        } catch (error) {
          console.error("Logout error:", error);
          alert("Logout error");
        }
      }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
  </body>
</html>
