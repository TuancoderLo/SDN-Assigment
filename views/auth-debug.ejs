<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Auth Debug - Perfume Store</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header bg-primary text-white">
              <h3><i class="fas fa-bug"></i> Authentication Debug Tool</h3>
            </div>
            <div class="card-body">
              <h5>Server-side Information (from EJS)</h5>
              <div class="alert alert-info">
                <% if (typeof user !== 'undefined' && user) { %>
                <p><strong>✅ User Authenticated</strong></p>
                <ul>
                  <li><strong>Email:</strong> <%= user.email %></li>
                  <li><strong>Name:</strong> <%= user.name %></li>
                  <li><strong>ID:</strong> <%= user._id %></li>
                  <li>
                    <strong>Is Admin:</strong> <%= typeof isAdmin !==
                    'undefined' && isAdmin ? 'Yes' : 'No' %>
                  </li>
                  <li><strong>YOB:</strong> <%= user.YOB || 'N/A' %></li>
                  <li>
                    <strong>Gender:</strong> <%= typeof user.gender !==
                    'undefined' ? (user.gender ? 'Male' : 'Female') : 'N/A' %>
                  </li>
                </ul>
                <% } else { %>
                <p><strong>❌ Not Authenticated</strong></p>
                <p>No user information found in server session</p>
                <% } %>
              </div>

              <hr />

              <h5>Client-side Information (JavaScript)</h5>
              <div class="alert alert-secondary">
                <h6>Cookies:</h6>
                <pre id="cookies-info" class="mb-3"></pre>

                <h6>LocalStorage Token:</h6>
                <pre id="localstorage-info" class="mb-3"></pre>

                <h6>Current User API Check:</h6>
                <div id="api-check">
                  <div
                    class="spinner-border spinner-border-sm"
                    role="status"
                  ></div>
                  Checking...
                </div>
              </div>

              <hr />

              <h5>Actions</h5>
              <div class="d-grid gap-2">
                <button class="btn btn-primary" onclick="checkAuth()">
                  <i class="fas fa-sync me-2"></i>Refresh Auth Check
                </button>
                <button class="btn btn-warning" onclick="clearAll()">
                  <i class="fas fa-trash me-2"></i>Clear All Auth Data
                </button>
                <a href="/login" class="btn btn-success">
                  <i class="fas fa-sign-in-alt me-2"></i>Go to Login
                </a>
                <a href="/" class="btn btn-secondary">
                  <i class="fas fa-home me-2"></i>Go to Home
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Display cookies
      document.getElementById("cookies-info").textContent =
        document.cookie || "(No cookies found)";

      // Display localStorage token
      const token = localStorage.getItem("token");
      document.getElementById("localstorage-info").textContent = token
        ? `Token: ${token.substring(0, 50)}...`
        : "(No token in localStorage)";

      // Check current user via API
      async function checkAuth() {
        const apiCheckDiv = document.getElementById("api-check");
        apiCheckDiv.innerHTML =
          '<div class="spinner-border spinner-border-sm" role="status"></div> Checking...';

        try {
          const response = await fetch("/api/auth/me", {
            method: "GET",
            credentials: "include",
            headers: {
              Authorization: token ? `Bearer ${token}` : "",
            },
          });

          const data = await response.json();

          if (data.success) {
            apiCheckDiv.innerHTML = `
                        <div class="alert alert-success">
                            <strong>✅ API Authentication Successful</strong>
                            <pre class="mt-2 mb-0">${JSON.stringify(
                              data.data,
                              null,
                              2
                            )}</pre>
                        </div>
                    `;
          } else {
            apiCheckDiv.innerHTML = `
                        <div class="alert alert-danger">
                            <strong>❌ API Authentication Failed</strong>
                            <p>${data.message}</p>
                        </div>
                    `;
          }
        } catch (error) {
          apiCheckDiv.innerHTML = `
                    <div class="alert alert-danger">
                        <strong>❌ Error</strong>
                        <p>${error.message}</p>
                    </div>
                `;
        }
      }

      // Clear all auth data
      function clearAll() {
        // Clear localStorage
        localStorage.clear();

        // Clear cookies
        document.cookie.split(";").forEach(function (c) {
          document.cookie = c
            .replace(/^ +/, "")
            .replace(
              /=.*/,
              "=;expires=" + new Date().toUTCString() + ";path=/"
            );
        });

        alert("All authentication data cleared!");
        location.reload();
      }

      // Run check on page load
      checkAuth();
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
