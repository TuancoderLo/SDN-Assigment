<%
// Safe check for variables with defaults
const currentUser = (typeof user !== 'undefined') ? user : null;
const isUserAdmin = (typeof isAdmin !== 'undefined') ? isAdmin : false;
const currentPage = (typeof page !== 'undefined') ? page : '';
%>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container">
    <a class="navbar-brand" href="/">
      <i class="fas fa-spray-can me-2"></i>
      Perfume Store
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link <%= currentPage === 'home' ? 'active' : '' %>" href="/">
            <i class="fas fa-home me-1"></i>Home
          </a>
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= currentPage === 'perfumes' ? 'active' : '' %>"
            href="/perfumes"
          >
            <i class="fas fa-spray-can me-1"></i>Perfumes
          </a>
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= currentPage === 'brands' ? 'active' : '' %>"
            href="/brands"
          >
            <i class="fas fa-tags me-1"></i>Brands
          </a>
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= currentPage === 'members' ? 'active' : '' %>"
            href="/members"
          >
            <i class="fas fa-users me-1"></i>Members
          </a>
        </li>
      </ul>

      <ul class="navbar-nav">
        <% if (currentUser) { %>
        <!-- Logged in user menu -->
        <% if (isUserAdmin) { %>
        <li class="nav-item">
          <a class="nav-link" href="/admin">
            <i class="fas fa-cog me-1"></i>Admin Panel
          </a>
        </li>
        <% } %>

        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            role="button"
            data-bs-toggle="dropdown"
          >
            <i class="fas fa-user me-1"></i><%= currentUser.name %> 
            <% if (isUserAdmin) { %>
              <span class="badge bg-warning text-dark ms-1">Admin</span>
            <% } %>
          </a>
          <ul class="dropdown-menu">
            <li>
              <a class="dropdown-item" href="/profile">
                <i class="fas fa-user-edit me-2"></i>Edit Profile
              </a>
            </li>
            <li>
              <a class="dropdown-item" href="/profile/password">
                <i class="fas fa-key me-2"></i>Change Password
              </a>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li>
              <a class="dropdown-item" href="#" onclick="logout()">
                <i class="fas fa-sign-out-alt me-2"></i>Logout
              </a>
            </li>
          </ul>
        </li>
        <% } else { %>
        <!-- Not logged in menu -->
        <li class="nav-item">
          <a class="nav-link" href="/login">
            <i class="fas fa-sign-in-alt me-1"></i>Login
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/register">
            <i class="fas fa-user-plus me-1"></i>Register
          </a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
